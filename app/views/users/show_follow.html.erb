<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section class="stats">
      <%= render 'shared/user_stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <%= render @users %>
    <% end %>
  </div>
</div>
