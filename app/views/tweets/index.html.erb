<div class="row">
    <div class="col-sm-8">
        <h1>Your Feed</h1>

        <% if user_signed_in? %>
            <%= form_for :tweet, url: tweets_path do |f| %>

            <% if @tweet.errors.any? %>
                <div class="alert alert-danger" role="alert">
                    <strong>
                        <%= pluralize(@tweet.errors.count, "error") %>:
                    </strong>

                    <%= @tweet.errors.full_messages.join(", ") %>
                </div>
            <% end %>

            <div class="form-group">
                <%= f.text_area :body, :class => "form-control", :placeholder => "What are you up to?" %>
            </div>

            <div class="form-group">
                <%= f.submit 'Add Tweet', :class => "btn btn-primary" %>
            </div>

            <% end %>
        <% end %>


        <% @tweets.each do |tweet| %>
            <div class="well well-sm tweet">
                <div class="row">
                    <div class="col-sm-9">
                        <%= tweet.body %>
                    </div>
                    <div class="col-sm-3 text-right">
                        <p class="tweet__author">
                            <%= !tweet.user.nil? ? "@" + tweet.user.name : nil %>
                        </p>
                        <p class="tweet__timestamp">
                            <%= link_to localize(tweet.created_at, :format => :long), tweet %>
                        </p>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

